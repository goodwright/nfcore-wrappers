{
    "inputs": {
        "file_options": {
            "name": "File options",
            "description": "Files needed to run the module",
            "properties": {
                "reads": {
                    "name": "FASTQ",
                    "type": "file",
                    "pattern": "fq\\.gz$|fastq\\.gz$",
                    "required": "true",
                    "description": "A FASTQ file to assess"
                }
            }
        }
    },
    "outputs": [
        {
            "name": "Trimmed FASTQ",
            "description": "A trimmed FASTQ file",
            "filetype": "fq.gz",
            "process": "TRIMGALORE"
        },
        {
            "name": "Trimming Report",
            "description": "A text file summarising the trimming that was performed on the FASTQ file.",
            "filetype": "txt",
            "process": "TRIMGALORE"
        }
    ]
}
